<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/toolbar"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ventana_entregador_view_controler" />

    <Button
        android:id="@+id/MAPANORMAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAPA NORMAL" />

    <Button
        android:id="@+id/MAPASATELITAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="MAPA SATELITAL" />

    <include layout="@layout/content_ventana_entregador_view_controler" />
</RelativeLayout>